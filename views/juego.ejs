<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Juego</h1>
    
    <% if (user) { %>
        <div id="<%= user._id %>" class="alert alert-danger" role="alert" >
            <%= user.name %>
        </div>
        <input type="hidden" id="currentUserId" value="<%= user._id %>">
    <% } %>
    
    <input type="text" name="" id="texto" placeholder="Mensaje">
    <button id="btnEnviar">Enviar</button>

    <div id="messageContainer"></div> <!-- Div para mostrar los mensajes -->

    <ul id="connectedUsers"></ul>

    <script src="/socket.io/socket.io.js"></script>
    <script src="js/juego.js"></script>
</body>

</html>
